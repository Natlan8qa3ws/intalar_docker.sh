#Antes de todo habilitar en sysctl.conf
net.ipv4.ip_forward=1

# https://www.youtube.com/watch?v=4Dko5W96WHg
# Vercion de docker
docker -v
docker version

# Para ver las imagenes que tenemos intaladas
docker images

REPOSITORY          TAG                 IMAGE ID            CREATED             SIZE
200401073/authy     latest              ea54960ffd1b        14 months ago       240MB


# Descargar Imagenes https://hub.docker.com/

docker pull 200401073/authy             #Nota: al usar pull descarga la ultima imagen

docker pull node                     # Para especificar version de imagenes , en este caso es la misma imagen diferentes etiquetas una latest y otra 18
docker pull node:18

# Indicar plataforma de descarga

docker pull platform linux/x86:64 Mysql

# Eliminar imagen 

docker image rm ?????

# Crear contenedor

docker create pihole/pihole
docker container rm

# Para correr el contenedor copiar el id que se genero

docker start f99b9b7b085a676b
docker ps -a

